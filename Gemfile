source 'https://rubygems.org'

gem 'rails', '3.2.9'

# Postgres database
gem 'pg'

# AUTH
gem 'devise'

# HAML
gem 'haml-rails'

# Pagination
gem "kaminari"

# Markdown to HTML
gem "redcarpet",     "~> 2.1.1"

# Servers
gem "thin"

gem 'jquery-rails'

gem 'settingslogic'

gem 'heroku'

gem 'activeadmin'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', platforms: :ruby
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap-sass', '~> 2.2.1.1'
end

group :development, :test do
  gem "rspec-rails"
  gem "capybara"
  gem "pry"
  gem "awesome_print"
  gem "launchy"
  gem 'factory_girl_rails'
end
